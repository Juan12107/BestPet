@page
@model BESTPET_DEFINITIVO.Pages.Mascotas.EditModel
@{
    ViewData["Title"] = "Editar Mascota";
}

<main>
    <section class="registro-section">
        <div class="registro-titulo">Editar Mascota</div>

        <form method="post" enctype="multipart/form-data" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Mascota.Id" />
            <input type="hidden" asp-for="Mascota.UsuarioId" />
            <input type="hidden" asp-for="Mascota.RutaFotoMascota" />

            <div class="form-group-full" style="text-align: center;">
                @if (!string.IsNullOrEmpty(Model.Mascota.RutaFotoMascota))
                {
                    <img src="@Model.Mascota.RutaFotoMascota" alt="Foto actual" class="profile-photo-small" style="margin-bottom: 10px;" />
                }
                <label>Cambiar foto</label>
                <input type="file" name="FotoMascota" accept="image/*" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Mascota.Nombre"></label>
                <input asp-for="Mascota.Nombre" class="form-control" required>
                <span asp-validation-for="Mascota.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascota.Genero"></label>
                <select asp-for="Mascota.Genero" class="form-control">
                    <option value="Macho">Macho</option>
                    <option value="Hembra">Hembra</option>
                </select>
                <span asp-validation-for="Mascota.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascota.Raza"></label>
                <input asp-for="Mascota.Raza" class="form-control" required>
                <span asp-validation-for="Mascota.Raza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascota.Edad"></label>
                <input asp-for="Mascota.Edad" class="form-control" type="number" required>
                <span asp-validation-for="Mascota.Edad" class="text-danger"></span>
            </div>
            <div class="form-group-full">
                <label asp-for="Mascota.Vacunas"></label>
                <textarea asp-for="Mascota.Vacunas" class="form-control" rows="2"></textarea>
            </div>
            <div class="form-group-full">
                <label asp-for="Mascota.Recomendaciones"></label>
                <textarea asp-for="Mascota.Recomendaciones" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group-full">
                <input type="submit" value="Guardar Cambios" class="center-btn" />
            </div>
            <div class="form-group-full" style="text-align: center; margin-top: 15px;">
                <a asp-page="/MiCuenta">Volver a Mi Cuenta</a>
            </div>
        </form>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .text-danger {
            color: #fc575e;
            font-size: 0.9em;
            margin-top: 4px;
        }
    </style>
}