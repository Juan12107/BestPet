@page
@model BESTPET_DEFINITIVO.Pages.Mascotas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Mascota";
}

<main>
    <section class="registro-section">
        <div class="delete-warning-header">
            <div class="warning-icon">!</div>
            <h2>Confirmar Eliminación</h2>
        </div>

        <p class="warning-text">
            ¿Estás seguro de que deseas eliminar a esta mascota? Esta acción no se puede deshacer.
        </p>

        <div class="user-summary-delete">
            <div class="user-info">
                <div class="user-name">@Model.Mascota.Nombre</div>
            </div>
        </div>

        <form method="post">
            <input type="hidden" asp-for="Mascota.Id" />
            <div class="delete-actions">
                <input type="submit" value="Sí, Eliminar Mascota" class="center-btn btn-danger" />
                <a asp-page="/MiCuenta" class="center-btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </section>
</main>