@page
@model BESTPET_DEFINITIVO.Pages.Mascotas.AgregarMascotaModel
@{
    ViewData["Title"] = "Agregar Mascota";
}

<main>
    <section class="registro-section">
        <div class="registro-titulo">Registrar Nueva Mascota</div>

        <form method="post" enctype="multipart/form-data" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group-full">
                <label>Foto de la Mascota</label>
                <input type="file" name="FotoMascota" accept="image/*">
            </div>

            <div class="form-group">
                <label asp-for="Mascota.Nombre"></label>
                <input asp-for="Mascota.Nombre" required placeholder="Ej: Rocky">
                <span asp-validation-for="Mascota.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascota.Genero"></label>
                <select asp-for="Mascota.Genero" class="form-control">
                    <option value="Macho">Macho</option>
                    <option value="Hembra">Hembra</option>
                </select>
                <span asp-validation-for="Mascota.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascota.Raza"></label>
                <input asp-for="Mascota.Raza" required placeholder="Ej: Border Collie">
                <span asp-validation-for="Mascota.Raza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mascota.Edad"></label>
                <input asp-for="Mascota.Edad" type="number" required placeholder="Ej: 3">
                <span asp-validation-for="Mascota.Edad" class="text-danger"></span>
            </div>
            <div class="form-group-full">
                <label asp-for="Mascota.Vacunas"></label>
                <textarea asp-for="Mascota.Vacunas" rows="2" placeholder="Ej: Rabia (anual), Parvovirus..."></textarea>
            </div>
            <div class="form-group-full">
                <label asp-for="Mascota.Recomendaciones">Recomendaciones para el paseo</label>
                <textarea asp-for="Mascota.Recomendaciones" rows="3" placeholder="Ej: Le asustan los ruidos fuertes, es muy amigable con otros perros..."></textarea>
            </div>

            <div class="form-group-full">
                <input type="submit" value="Guardar Mascota" class="center-btn" />
            </div>
        </form>
    </section>
</main>