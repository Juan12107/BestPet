@page
@model BESTPET_DEFINITIVO.Pages.LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<main>
    <section class="registro-section" style="max-width: 450px;">
        <div class="registro-titulo">Iniciar Sesión</div>

        <form method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="width: 100%; text-align: center; margin-bottom: 15px;"></div>

            <div class="form-group-full">
                <label>Correo Electrónico</label>
                <input asp-for="Input.Correo" class="form-control" required placeholder="Ingresa tu correo">
                <span asp-validation-for="Input.Correo" class="text-danger"></span>
            </div>

            <div class="form-group-full">
                <label>Contraseña</label>
                <input asp-for="Input.Password" class="form-control" required placeholder="Ingresa tu contraseña">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="center-btn">Ingresar</button>
        </form>
        <div style="text-align: center; margin-top: 20px;">
            ¿No tienes cuenta? <a asp-page="/Usuarios/Create" style="color: #6a8dff; font-weight: 600;">Regístrate</a>
        </div>
    </section>
</main>